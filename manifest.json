{
  "manifest_version": 2,
  "name": "Bookmarks Table",
  "version": "0.7",
  "description": "View your Chrome bookmarks by date in a sortable searchable table",
  "browser_action": {
    "name": "Load bookmarks1",
    "default_icon": {
      "19": "icons/button19_lightgrey.png",
      "38": "icons/button38_lightgrey.png"
    }
  },
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "background": {
    "scripts": ["src/background.js"]
  },
  "icons": { "16": "icons/button16_lightgrey.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png" }
}
